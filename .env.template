# Environment variables for Bible Clock
SIMULATE=1
DEBUG=1
FONT_SIZE=80
DISPLAY_WIDTH=1200
DISPLAY_HEIGHT=825

# WiFi Configuration (for Raspberry Pi)
WIFI_SSID=YourNetworkName
WIFI_PASSWORD=YourNetworkPassword

# Time Synchronization
NTP_SERVERS=pool.ntp.org,time.google.com,time.cloudflare.com
TIMEZONE=America/Chicago

# Audio Configuration
AUDIO_ENABLED=true
TTS_ENGINE=pyttsx3
TTS_VOICE_RATE=150
TTS_VOICE_VOLUME=0.8

# ReSpeaker HAT Configuration
RESPEAKER_CHANNELS=6
RESPEAKER_RATE=16000
RESPEAKER_CHUNK=1024

# Voice Control
WAKE_WORD=Hey Bible Clock
WAKE_WORD_SENSITIVITY=0.5
VOICE_TIMEOUT=5

# ChatGPT API (get your API key from OpenAI)
CHATGPT_API_KEY=your_openai_api_key_here
CHATGPT_MODEL=gpt-3.5-turbo
CHATGPT_MAX_TOKENS=150

# Button Configuration (GPIO pins)
BUTTON1_PIN=18
BUTTON2_PIN=19
BUTTON3_PIN=20

# Web Interface
WEB_INTERFACE_ENABLED=true
WEB_PORT=5000
WEB_HOST=0.0.0.0